{
  "manifest_version": 3,
  "name": "AI Türkçe Metin Düzeltici",
  "version": "3.0.0",
  "description": "Türkçe resmi yazışmaları AI ile düzelten Chrome extension. CKEditor, Summernote, TinyMCE ve tüm text editörlerde çalışır.",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://api.openai.com/*"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/diff.min.js",
        "content/content.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_page": "options/options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
